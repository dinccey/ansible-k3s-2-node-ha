replicaCount: {{ kite_replica_count }}

# Database configuration
db:
    type: postgres
    dsn: "{{ kite_db_dsn }}"

# Also reference the secret as an envFrom source; the role ensures this secret
# exists ({{ kite_release_name }}-secret) so charts that prefer secrets will pick it up.
envFrom:
  - secretRef:
      name: {{ kite_release_name }}-secret

# Resources for replicas
resources:
  requests:
    cpu: 100m
    memory: 128Mi
  limits:
    cpu: 250m
    memory: 256Mi

securityContext:
  runAsUser: 1000
  runAsGroup: 1000
  fsGroup: 1000

service:
  type: ClusterIP
  port: 8080

topologySpreadConstraints:
  - maxSkew: 1
    topologyKey: kubernetes.io/hostname
    whenUnsatisfiable: ScheduleAnyway
    labelSelector:
      matchLabels:
        app.kubernetes.io/name: kite
